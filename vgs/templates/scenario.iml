let mod_state_with_event (e) (s)  =
    (match e with
        | Action a -> { s with
            incoming_action = Some a;
            incoming_msg = FIX_TL_None
        }
        | Message m -> { s with
            incoming_msg = FIX_TL_Normal m;
            incoming_action = None
        }
    )
    [@@macro]
;;

let is_event_valid (e : event) (s : model_state)  : bool =
    let e = mod_state_with_event e s
    in
    is_valid e
    [@@macro] [@@macro]
;;

