[@@@import "../src-core/datetime.iml"]

[@@@program]

open Datetime

let get_current_utctimestamp_milli ?(offset = 0) () : fix_utctimestamp_milli =
  let open Datetime in
  let dtime = Caml_unix.gettimeofday () in
  let dtime = Q.to_float (Q.of_float dtime +. (1000. *. Real.of_int offset)) in
  let tm = Caml_unix.gmtime dtime in
  let msec =
    Z.of_float
      (Real.to_float (1000. *. (Q.of_float dtime -. Q.of_float (floor dtime))))
  in
  make_utctimestamp_milli
    (Z.of_int tm.Caml_unix.tm_year + 1900)
    (Z.of_int tm.Caml_unix.tm_mon + 1)
    (Z.of_int tm.Caml_unix.tm_mday)
    (Z.of_int tm.Caml_unix.tm_hour)
    (Z.of_int tm.Caml_unix.tm_min)
    (Z.of_int tm.Caml_unix.tm_sec)
    (Some msec)


let get_current_utctimestamp_micro ?(offset = 0) () : fix_utctimestamp_micro =
  let open Datetime in
  let dtime = Caml_unix.gettimeofday () in
  let dtime =
    Q.to_float (Q.of_float dtime +. (1000000. *. Real.of_int offset))
  in
  let tm = Caml_unix.gmtime dtime in
  let msec =
    Z.of_float
      (Real.to_float
         (1000000. *. (Q.of_float dtime -. Q.of_float (floor dtime))) )
  in
  make_utctimestamp_micro
    (Z.of_int tm.Caml_unix.tm_year + 1900)
    (Z.of_int tm.Caml_unix.tm_mon + 1)
    (Z.of_int tm.Caml_unix.tm_mday)
    (Z.of_int tm.Caml_unix.tm_hour)
    (Z.of_int tm.Caml_unix.tm_min)
    (Z.of_int tm.Caml_unix.tm_sec)
    (Some msec)


let get_current_utctimeonly_milli () : fix_utctimeonly_milli =
  convert_utctimestamp_milli_utctimeonly_milli
    (get_current_utctimestamp_milli ())


let get_current_utctimeonly_micro () : fix_utctimeonly_micro =
  convert_utctimestamp_micro_utctimeonly_micro
    (get_current_utctimestamp_micro ())


let get_current_utcdateonly () : fix_utcdateonly =
  convert_utctimestamp_milli_utcdateonly (get_current_utctimestamp_milli ())


let get_current_monthyear () : fix_monthyear =
  convert_utctimestamp_milli_monthyear (get_current_utctimestamp_milli ())


let get_current_localmktdate () : fix_localmktdate =
  convert_utctimestamp_milli_localmktdate (get_current_utctimestamp_milli ())


[@@@logic]
