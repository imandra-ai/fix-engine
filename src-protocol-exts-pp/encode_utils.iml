[@@@program]

[@@@import "../src-core-pp/encode_base_types.iml"]

open Encode_base_types

[@@@import "../src-core-pp/encode_datetime.iml"]

open Encode_datetime

let enc_req f x = Some (f x)

let enc_opt f x = match x with None -> None | Some y -> Some (f y)

let enc_split_req f x = match x with [] -> None | _ -> Some (f x)

let enc_split_opt f x =
  match x with None -> None | Some [] -> None | Some y -> Some (f y)


let enc_repeat f tag len lst =
  match lst with
  | [] ->
      []
  | lst ->
      let rst = lst |> List.map f |> List.fold_left (fun m j -> m @ j) [] in
      ( match len with
      | None ->
          rst
      | Some len ->
          (tag, len |> enc_req encode_int) :: rst )


[@@@logic]
